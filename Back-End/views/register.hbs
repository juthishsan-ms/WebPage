    <div class="d-flex justify-content-center align-items-center wrapper">
        <div class="form-box">

            <!-- Registration form -->

            <form id="registrationForm" method="post" action="/auth/register" onsubmit="return validateRegisterForm()">
                <div class="register-container" id="register">

                    <div class="top">
                        <header class="py-0">Sign Up</header>
                        <hr class="mx-auto">

                        {{#if msg}}
                        <p class="{{msg_type}}">{{msg}}</p>
                        {{/if}}
                        
                        <p class="error-message" id="registerError"></p>
                    </div>

                    <div class="two-forms">
                        <div class="input-box">
                            <input type="text" id="registerFirstName" name="fname" class="input-field"
                                placeholder="Firstname">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </div>
                        <div class="input-box">
                            <input type="text" id="registerLastName" name="lname" class="input-field"
                                placeholder="Lastname">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </div>
                    </div>

                    <div class="input-box">
                        <input type="text" id="registerEmail" name="email" class="input-field" placeholder="Email">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </div>

                    <div class="input-box">
                        <input type="password" id="registerPassword" name="pass" class="input-field"
                            placeholder="Password">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </div>

                    <div class="input-box">
                        <input type="password" id="registerPassword" name="cpass" class="input-field"
                            placeholder="Confirm Password">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </div>

                    <div class="input-box">
                        <input type="text" id="registerMobile" name="mobile" class="input-field"
                            placeholder="Mobile No">
                        <i class="fa fa-phone" aria-hidden="true"></i>
                    </div>

                    <div class="two-col">
                        <div class="one">
                            <input type="checkbox" id="register-check">
                            <label class="pt-2" for="register-check">Remember Me</label>
                        </div>
                        <div class="two pt-2">
                            <label><a href="#">Terms & conditions</a></label>
                        </div>
                    </div>

                    <div class="input-box">
                        <button type="submit" class="submit">Register</button>
                    </div>

                    <div class="top">
                        <span>Have an account? <a href="/login.html" onclick="login()">Login</a></span>
                    </div>

                </div>
            </form>
